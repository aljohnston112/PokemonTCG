<Page x:Class="PokemonTCG.View.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:pokemon="using:PokemonTCG.View"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="*, *"
          ColumnDefinitions="*">

        <pokemon:PlayerPage x:Name="PageOpponent"
                            VerticalAlignment="Stretch" />

        <pokemon:PlayerPage x:Name="PagePlayer"
                            Grid.Row="1"
                            VerticalAlignment="Stretch" />

    </Grid>

</Page>