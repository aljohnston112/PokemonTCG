<Page x:Class="PokemonTCG.View.PlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:util="using:PokemonTCG.Utilities"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="../ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <SolidColorBrush x:Key="BackgroundColor"
                             Color="#192653" />
        </ResourceDictionary>

    </Page.Resources>

    <Grid x:Name="GridField"
          RowDefinitions="*, *, *"
          ColumnDefinitions="*, *, *, *, *, *, *, *, *, *, *"
          Padding="5"
          Background="{StaticResource BackgroundColor}">

        <Image x:Name="ActiveImage"
               Margin="5"
               Grid.Row="0"
               Grid.Column="5"
               Tapped="{x:Bind util:FlyoutUtil.ImageTapped}"
               FlyoutBase.AttachedFlyout="{StaticResource ImagePreviewFlyout}" />

        <Image x:Name="DeckImage"
               Margin="5"
               Grid.Row="2"
               Grid.Column="10" />

        <Image x:Name="Bench1Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="3"
               Tapped="{x:Bind util:FlyoutUtil.ImageTapped}"
               FlyoutBase.AttachedFlyout="{StaticResource ImagePreviewFlyout}" />

        <Image x:Name="Bench2Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="4"
               Tapped="{x:Bind util:FlyoutUtil.ImageTapped}"
               FlyoutBase.AttachedFlyout="{StaticResource ImagePreviewFlyout}" />

        <Image x:Name="Bench3Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="5"
               Tapped="{x:Bind util:FlyoutUtil.ImageTapped}"
               FlyoutBase.AttachedFlyout="{StaticResource ImagePreviewFlyout}" />

        <Image x:Name="Bench4Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="6"
               Tapped="{x:Bind util:FlyoutUtil.ImageTapped}"
               FlyoutBase.AttachedFlyout="{StaticResource ImagePreviewFlyout}" />


        <Image x:Name="Bench5Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="7"
               Tapped="{x:Bind util:FlyoutUtil.ImageTapped}"
               FlyoutBase.AttachedFlyout="{StaticResource ImagePreviewFlyout}" />

        <Image x:Name="DiscardImage"
               Margin="5"
               Grid.Row="1"
               Grid.Column="10" />

        <Image x:Name="Prize1Image"
               Margin="5"
               Grid.Row="0"
               Grid.Column="0" />

        <Image x:Name="Prize2Image"
               Margin="5"
               Grid.Row="0"
               Grid.Column="1" />

        <Image x:Name="Prize3Image"
               Margin="5"
               Grid.Row="1"
               Grid.Column="0" />

        <Image x:Name="Prize4Image"
               Margin="5"
               Grid.Row="1"
               Grid.Column="1" />

        <Image x:Name="Prize5Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="0" />

        <Image x:Name="Prize6Image"
               Margin="5"
               Grid.Row="2"
               Grid.Column="1" />

    </Grid>

</Page>