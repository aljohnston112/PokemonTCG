<Page
    x:Class="PokemonTCG.View.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="using:PokemonTCG.View"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!--
        <SolidColorBrush x:Key="Color" Color="#F3D14B"/>
        -->
        <SolidColorBrush
            x:Key="Color"
            Color="#192653" />
    </Page.Resources>

    <Grid
        x:Name="GridField"
        RowDefinitions="*, *, *"
        ColumnDefinitions="*, *, *, *, *, *, *, *, *, *, *"
        Padding="5"
        Background="{StaticResource Color}">

        <Image
            x:Name="ActiveImage"
            Source="{Binding Path=PlayerState.Active.ImageFileNames[ImageSize.SMALL], Mode=OneWay, FallbackValue=/Assets/BlankCard2.png}"
            Margin="5"
            Grid.Row="0"
            Grid.Column="5" />

        <Image
            x:Name="DeckImage"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="10" />

        <Image
            x:Name="Bench1Image"
            Source="/Assets/BlankCard2.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="3" />

        <Image
            x:Name="Bench2Image"
            Source="/Assets/BlankCard2.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="4" />

        <Image
            x:Name="Bench3Image"
            Source="/Assets/BlankCard2.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="5" />

        <Image
            x:Name="Bench4Image"
            Source="/Assets/BlankCard2.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="6" />


        <Image
            x:Name="Bench5Image"
            Source="/Assets/BlankCard2.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="7" />

        <Image
            x:Name="DiscardImage"
            Source="/Assets/BlankCard2.png"
            Margin="5"
            Grid.Row="1"
            Grid.Column="10" />

        <Image
            x:Name="Prize1Image"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="0"
            Grid.Column="0" />

        <Image
            x:Name="Prize2Image"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="0"
            Grid.Column="1" />

        <Image
            x:Name="Prize3Image"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="1"
            Grid.Column="0" />

        <Image
            x:Name="Prize4Image"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="1"
            Grid.Column="1" />

        <Image
            x:Name="Prize5Image"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="0" />

        <Image
            x:Name="Prize6Image"
            Source="/Assets/CardBack.png"
            Margin="5"
            Grid.Row="2"
            Grid.Column="1" />

        <ComboBox
            x:Name="ComboBoxAttacks"
            Grid.Row="0"
            Grid.Column="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        </ComboBox>

    </Grid>

</Page>