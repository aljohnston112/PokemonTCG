<Page
    x:Class="PokemonTCG.View.DeckListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokemonTCG.View"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid ColumnDefinitions="*"
          RowDefinitions="*, auto">

        <ListView 
            Name="DeckNameListView"
            ItemsSource="{x:Bind ViewModel.DeckNames}"
            IsItemClickEnabled="True"
            SelectionMode="None"
            ItemClick="SetUpDeckClickListener"/>

        <Button
            Name="CreateNewDeckButton"
            Content="Create New Deck"
            Click="CreateNewDeckEvent"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" />

    </Grid>
    
</Page>
